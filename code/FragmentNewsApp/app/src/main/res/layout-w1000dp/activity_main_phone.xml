<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity.MainActivity">

    <fragment
        android:id="@+id/phoneTitleFrag"
        android:name="haonan.tech.fragmentnewsapp.fragment.PhoneTitleFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000"/>
    <FrameLayout
        android:id="@+id/phoneContentLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <fragment
            android:id="@+id/phoneContentFrag"
            android:name="haonan.tech.fragmentnewsapp.fragment.PhoneContentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>